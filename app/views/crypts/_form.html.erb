<%= form_with(model: crypt, local: true) do |form| %>
  <% if crypt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(crypt.errors.count, "error") %> prohibited this crypt from being saved:</h2>

      <ul>
      <% crypt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :symbol %>
    <%= form.text_field :symbol, id: :crypt_symbol %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :crypt_user_id, value: current_user.id %>
  </div>

  <div class="field">
    <%= form.label :cost_per %>
    <%= form.text_field :cost_per, id: :crypt_cost_per %>
  </div>

  <div class="field">
    <%= form.label :amount_owned %>
    <%= form.text_field :amount_owned, id: :crypt_amount_owned %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
